{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="POST" action="/instructors?_method=PUT">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/9419482/500x500) no-repeat center center / cover"></section>
        <section class="details">

            <h3>Editar Instrutor</h3>

            {# o include inclui um arquivo externo de bloco de codigo #}
            {% include 'instructors/fields.njk'%}

            {# incluindo o id de forma oculta no front-end #}
            <input 
                type="hidden" 
                name="id" 
                value={{instructor.id}}
            >

        </section>
    </form>

{% endblock content %}